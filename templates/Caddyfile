*.${DOMAIN} {

	$([[ ! -f /root/.acme.sh/*.${DOMAIN}/fullchain.cer ]] && echo "#") tls internal
	$([[ -f /root/.acme.sh/*.${DOMAIN}/fullchain.cer ]] && echo "#") tls /root/.acme.sh/*.${DOMAIN}/fullchain.cer /root/.acme.sh/*.${DOMAIN}/*.${DOMAIN}.key

        @auth {
                not {
                        host placeholder-httpnoauth.${DOMAIN}
                }
        }

        reverse_proxy {
                to "{http.request.host.labels.2}.lxd:80"
        }
}
